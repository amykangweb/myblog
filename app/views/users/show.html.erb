<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
<%= render 'shared/user_info' %>
</span>
    </section>
  </aside>
    <div class="span8">
    <% if @user.posts.any? %>
      <h3><%= @user.name %>'s Blog Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
	  <% @posts.each do |post| %>
        <%= link_to post.title, post_path(post) %><p>
		<%= post.content %><br>
		Posted <%= time_ago_in_words(post.created_at) %> ago.  
		<% if current_user?(post.user) || current_user.admin? %>
		  |  <%= link_to "delete", post, method: :delete, data: {confirm: "are you sure?"}, title: post.title %>
		<% end %><p>
		<% end %>
      </ol>
      <%= will_paginate @posts %>
	  <% else %>
	  <h3>Blog Posts (0)</h3>
	  <ol class="microposts">
	  <%= "No Posts" %>
	  </ol>
    <% end %>
  </div>
</div>