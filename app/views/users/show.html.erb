<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
<%= link_to gravatar_for(@user, size: 52), @user %>
<h1>
  <%= @user.name %>
</h1>
<% if current_user?(@user) %>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<% end %>
<span>
  <%= pluralize(@user.posts.count, "post") %>
</span>
<span class="newpost">
<% if current_user?(@user) %>
<%= link_to "Create New Post", new_post_path %>
<% end %>
</span>
    </section>
  </aside>
    <div class="span8">
    <% if @user.posts.any? %>
      <h3><%= @user.name %>'s Blog Posts (<%= @all.count %>)</h3>
      <ol class="microposts">
	  <% @posts.each do |post| %>
        <%= link_to post.title, post_path(post) %><p>
		<%= post.content %><br>
		Posted <%= time_ago_in_words(post.created_at) %> ago.<br>  
		<% if current_user?(post.user) || current_user.admin? %>
		<%= link_to "edit", edit_post_path(post) %>  |  <%= link_to "delete", post, method: :delete, data: {confirm: "are you sure?"}, title: post.title %>
		<% end %><p>
		<% end %>
      </ol>
      <%= will_paginate @posts %>
	  <% else %>
	  <h3><%= @user.name %>'s Blog Posts (0)</h3>
	  <ol class="microposts">
	  <%= "No Posts" %>
	  </ol>
    <% end %>
  </div>
</div>