<h3>Create Post</h3>
<%= form_for @post do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
<%= f.text_field :title, placeholder: "Post title..." %>
</div>
<div class="field">
<%= f.text_area :content, placeholder: "Compose new post...", class: "postcontent" %>
</div>
<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>