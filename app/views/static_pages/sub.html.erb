<% provide(:title, 'Subscribed Blogs') %>
<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
<%= link_to gravatar_for(current_user, size: 52), current_user %>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.posts.count, "post") %>
</span>
<span class="newpost">
<%= link_to "Create New Post", new_post_path %>
</span>
    </section>
  </aside>
    <div class="span8">
      <h3>Subscribed Blogs</h3>
		<%= render 'shared/feed' %>
  </div>
</div>
<% end %>