<%= link_to gravatar_for(@user, size: 52), @user %>
<h1>
  <%= @user.name %>
</h1>
<% if current_user?(@user) %>
<span>
  <%= link_to "view my profile", @user %>
</span>
<% end %>
<span>
  <%= pluralize(@user.posts.count, "post") %>
</span>
<span class="newpost">
<% if current_user?(@user) %>
<%= link_to "Create New Post", new_post_path %>
<% end %>
</span>